[alias]
    a = add
    u = add -u
    b = branch --sort=committerdate --format='%(color:green)[%(committerdate:short)]%(color:reset) %(refname:short) %(color:yellow)%(authorname)%(color:reset)' --color
    br = branch -r --sort=committerdate --format='%(color:green)[%(committerdate:short)]%(color:reset) %(refname:short) %(color:yellow)%(authorname)%(color:reset)' --color
    bl = blame
    co = checkout
    cb = checkout -b
    ci = commit
    cm = commit -m
    cs = commit -sm
    pick = cherry-pick
    amend = commit --amend
    e = !nvim ~/.gitconfig
    f = fetch
    fo = fetch origin
    fd = !fdfind
    g = !git grep
    go = !git grep "$@" -- "./*" ":!vendor/**"
    gp = grep
    h = show
    hn = show --name-only
    i = diff
    iw = diff --word-diff
    in = diff --name-only
    is = diff --staged
    isw = diff --staged --word-diff
    isn = diff --staged --name-only
    l = log --decorate-refs-exclude=*HEAD --date=format:'%Y-%m-%d %H:%M' --pretty=format:'%C(green)[%ad]%C(reset) %C(red)%h%C(reset) %s %C(yellow)%d%an%C(reset)'
    ll = log
    ln = log --name-only
    lp = log -p
    ld = log -S
    lm = log --no-merges
    la = log --author
    lg = log --grep
    lt = log --graph --all --format=\"%x09%C(cyan bold)%an%Creset%x09%C(yellow)%h%Creset %C(magenta reverse)%d%Creset %s\"
    ls = !git ls-files
    m = !git checkout $(git symbolic-ref refs/remotes/origin/HEAD | awk -F'[/]' '{print $NF}')
    mp = !git pull orogin $(git symbolic-ref refs/remotes/origin/HEAD | awk -F'[/]' '{print $NF}')
    merge = merge --no-ff
    fmerge = merge --ff
    po = push
    pi = pull --rebase
    pm = pull --merge
    pop = stash pop
    r = remote
    rs = remote show
    s = status -s
    st = status
    sw = switch -
    t = tag

    alias = !git config --get-regexp alias
    pwd = rev-parse --show-prefix
    root = rev-parse --show-toplevel

    hard = reset --hard
    mix = reset
    soft = reset --soft

    me = !git config --get-regexp user
    us = !git log --pretty=format:"%an" | sort | uniq -c | sort -rn
    ours = checkout --ours
    theirs = checkout --theirs

[core]
    editor = nvim
    autocrlf= false
    pager = delta

[delta]
    plus-color = "#012800"
    minus-color = "#340001"
    syntax-theme = Monokai Extended
    side-by-side = true

[interactive]
    diffFilter = delta --color-only

[pull]
    rebase = true

[push]
    default = simple

[include]
    path = ~/.gitconfig.local

[diff]
    tool = vimdiff

[difftool]
    prompt = false

[merge]
    ff = false

[ghq]
