[alias]
    b = branch
    u = add -u
    f = fetch
    fo = fetch origin
    s = status -s
    ss = status -s
    st = status
    co = checkout
    ci = commit
    cm = commit
    dfc = diff --cached
    dfs = diff --staged
    df = diff
    dft = difftool
    fo = fetch origin
    ol = log --format=\" %C(cyan bold)%an%Creset%x09%C(yellow)%h%Creset %C(magenta reverse)%d%Creset %s\"
    tr = log --graph --all --format=\"%x09%C(cyan bold)%an%Creset%x09%C(yellow)%h%Creset %C(magenta reverse)%d%Creset %s\"
    tree = log --graph --all --format=\"%x09%C(cyan bold)%an%Creset%x09%C(yellow)%h%Creset %C(magenta reverse)%d%Creset %s\"
    ai = update-index --add
    ri = update-index --remove
    po = push
    pi = pull
    l = log
    ul = log --no-merges
    ulog = log --no-merges
    vgrep = !git grep "$@" -- "./*" ":!vendor/**"

[core]
    editor=vim
    autocrlf= false

[pull]
    rebase = true

[push]
    default = simple

[include]
    path = ~/.gitconfig.local

[diff]
    tool = vimdiff

[difftool]
    prompt = false

