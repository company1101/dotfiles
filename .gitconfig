[user]
    name=Hiroshi Muraoka
    email=h.muraoka714@gmail.com

[alias]
    a = add
    u = add -u
    b = branch
    br = branch -r --sort=committerdate --format='%(color:green)[%(committerdate:short)]%(color:reset) %(refname:short)' --color
    f = fetch
    fo = fetch origin
    h = show
    s = status -s
    st = status
    pop = stash pop
    t = tag
    r = remote
    rs = remote show
    rp = remote prune origin
    co = checkout
    cb = checkout -b
    m = checkout master
    mp = !git checkout master && git pull
    cm = commit -m
    cs = commit -sm
    i = diff
    is = diff --staged
    iw = diff --word-diff
    isw = diff --word-diff --staged
    po = push
    pi = pull --rebase
    pm = pull --merge
    l = log
    lp = log -p
    lo = log --decorate-refs-exclude=*HEAD --date=format:'%Y-%m-%d %H:%M' --pretty=format:'[%ad] %Cgreen%h%Creset %s by %Cgreen%d%an%Creset'

    lm = log --no-merges
    g = !git grep
    vg = !git grep "$@" -- "./*" ":!vendor/**"

    amend = commit --amend
    pick = cherry-pick
    hard = reset --hard
    soft = reset --soft
    ours = checkout --ours
    theirs = checkout --theirs
    tree = log --graph --all --format=\"%x09%C(cyan bold)%an%Creset%x09%C(yellow)%h%Creset %C(magenta reverse)%d%Creset %s\"

[core]
    editor=nvim
    autocrlf= false

[pull]
    rebase = true

[push]
    default = simple

[include]
    path = ~/.gitconfig.local

[diff]
    tool = vimdiff

[merge]
    ff = false

[difftool]
    prompt = false

[ghq]
    root=~/.ghq
    root=~/.go/src
    root=~/dart/src
    root=~/python/src
    root=~/go/src
    root=~/src
