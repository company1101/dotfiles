[alias]
    b = branch
    br = branch
    u = add -u
    f = fetch
    fo = fetch origin
    h = show
    s = status -s
    ss = status
    st = status
    m = checkout master
    mp = !git checkout master && git pull
    co = checkout
    ci = commit
    cm = commit -m
    cms = commit -sm
    amend = commit --amend
    d = diff
    df = diff
    dc = diff --cached
    ds = diff --staged
    ai = update-index --add
    ri = update-index --remove
    po = push
    pi = pull
    l = log
    ll = log -p
    lo = log --oneline
    ul = log --no-merges
    ol = log --format=\" %C(cyan bold)%an%Creset%x09%C(yellow)%h%Creset %C(magenta reverse)%d%Creset %s\"
    tr = log --graph --all --format=\"%x09%C(cyan bold)%an%Creset%x09%C(yellow)%h%Creset %C(magenta reverse)%d%Creset %s\"
    g = grep
    vgrep = !git grep "$@" -- "./*" ":!vendor/**"

[core]
    editor=vim
    autocrlf= false

[pull]
    rebase = true

[push]
    default = simple

[include]
    path = ~/.gitconfig.local

[diff]
    tool = vimdiff

[difftool]
    prompt = false

[ghq]
    root=~/.ghq
    root=~/.go/src
    root=~/dart/src
    root=~/python/src
    root=~/go/src
    root=~/src
