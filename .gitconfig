[user]
    name=Hiroshi Muraoka
    email=h.muraoka714@gmail.com

[alias]
    a = add
    u = add -u
    b = branch --sort=committerdate --format='%(color:green)[%(committerdate:short)]%(color:reset) %(refname:short) %(color:yellow)%(authorname)%(color:reset)' --color
    br = branch -r --sort=committerdate --format='%(color:green)[%(committerdate:short)]%(color:reset) %(refname:short) %(color:yellow)%(authorname)%(color:reset)' --color
    e = !nvim ~/.gitconfig
    f = fetch
    fo = fetch origin
    h = show
    s = status -s
    st = status
    pop = stash pop
    t = tag
    r = remote
    rs = remote show
    rp = remote prune origin
    co = checkout
    cb = checkout -b
    mg = merge --no-ff
    mgff = merge --ff
    m = !git checkout $(git symbolic-ref refs/remotes/origin/HEAD | awk -F'[/]' '{print $NF}')
    mp = !git checkout $(git symbolic-ref refs/remotes/origin/HEAD | awk -F'[/]' '{print $NF}') && git pull
    cm = commit -m
    cs = commit -sm
    i = diff
    iw = diff --word-diff
    in = diff --name-only
    is = diff --staged
    isw = diff --staged --word-diff
    isn = diff --staged --name-only
    po = push
    pi = pull --rebase
    pm = pull --merge
    l = log --decorate-refs-exclude=*HEAD --date=format:'%Y-%m-%d %H:%M' --pretty=format:'%C(green)[%ad]%C(reset) %C(red)%h%C(reset) %s %C(yellow)%d%an%C(reset)'
    ll = log
    lp = log -p

    lm = log --no-merges
    ls = !git ls-files
    g = !git grep
    vg = !git grep "$@" -- "./*" ":!vendor/**"
    sw = switch
    rp = rev-parse

    pwd = rev-parse --show-prefix
    me = !git config --get-regexp user
    alias = !git config --get-regexp alias
    amend = commit --amend
    pick = cherry-pick
    hard = reset --hard
    mix = reset
    soft = reset --soft
    ours = checkout --ours
    theirs = checkout --theirs
    tree = log --graph --all --format=\"%x09%C(cyan bold)%an%Creset%x09%C(yellow)%h%Creset %C(magenta reverse)%d%Creset %s\"

[core]
    editor=nvim
    autocrlf= false

[pull]
    rebase = true

[push]
    default = simple

[include]
    path = ~/.gitconfig.local

[diff]
    tool = vimdiff

[merge]
    ff = false

[difftool]
    prompt = false

[ghq]
    root=~/.ghq
    root=~/.go/src
    root=~/dart/src
    root=~/python/src
    root=~/go/src
    root=~/src

